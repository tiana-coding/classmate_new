    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2020",
    "rootDir": "ts",
    "outDir": "js",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "ts/**/*"
  ],
  "exclude": [
    "node_modules"           
  ]
}